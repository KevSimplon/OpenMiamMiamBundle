{% extends 'IsicsOpenMiamMiamBundle:Mail:base.html.twig' %}

{% block content %}
    {{ 'mail.branch.orders_open.message_html'|trans({
        '%firstname%': format_identity(customer.lastname, customer.firstname, '%firstname%'),
        '%branch_city%': branchOccurrence.branch.city,
        '%association_name%': branchOccurrence.branch.association.name,
        '%branch_zipcode%': branchOccurrence.branch.zipcode,
        '%branch_address%': branchOccurrence.branch.address1,
        '%occurrence_date_begin%': branchOccurrence.begin|format_date("eeee dd MMMM")|capitalize,
        '%occurrence_date_begin_hours%': branchOccurrence.begin|format_date("HH"),
        '%occurrence_date_begin_minutes%': branchOccurrence.begin|format_date("mm"),
        '%occurrence_date_end_hours%': branchOccurrence.end|format_date("HH"),
        '%occurrence_date_end_minutes%': branchOccurrence.end|format_date("mm"),
        '%order_closed_date%': ordersClosingDateTime|format_datetime("eeee dd MMMM Y HH"),
        '%order_closed_date_minutes%': ordersClosingDateTime|format_datetime("mm")
    })|raw }}

    {{ 'mail.branch.orders_open.unsubscribe'|trans({
        '%url%': url('fos_user_profile_edit')
    })|raw }}
{% endblock %}

{% block signature %}
    <hr />
    {{ branchOccurrence.branch.association.getName() }}
{% endblock %}
