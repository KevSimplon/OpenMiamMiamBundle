{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch} %}
    {% block title %}{{ 'cart.title'|trans({'%branch_name%': branch.name}, 'seo') }}{% endblock %}
    {% block meta_description %}{{ 'cart.meta_description'|trans({'%branch_name%': branch.name}, 'seo') }}{% endblock %}

    {% block content %}
        <div id="order-progress"  class="btn-group btn-group-justified">
            <a href="#" class="btn btn-success active"><strong><span class="badge">1</span> {{ 'order.process.stage1'|trans }}</strong></a>
            <a href="#" class="btn btn-default" disabled="disabled"><strong><span class="badge">2</span> {{ 'order.process.stage2'|trans }}</strong></a>
            <a href="#" class="btn btn-default" disabled="disabled"><strong><span class="badge">3</span> {{ 'order.process.stage3'|trans }}</strong></a>
        </div>

        <h1>{{ 'cart.title'|trans }}</h1>

        <div id="cart">
            {% include 'IsicsOpenMiamMiamBundle:Cart:cart.html.twig' %}
        </div>
    {% endblock %}

    {% block javascript %}
        {{ parent() }}
        <script type="text/javascript">
            $(function() {
                new OpenMiamMiam.Quantity;
                new OpenMiamMiam.CartUpdateForm;
            });
        </script>
    {% endblock %}
{% endembed %}
